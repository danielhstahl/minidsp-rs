FROM rustembedded/cross:aarch64-unknown-linux-gnu
RUN dpkg --add-architecture arm64 && apt-get update && apt-get install -y libusb-1.0-0:arm64 libusb-1.0-0-dev:arm64 pkg-config
RUN ldconfig /lib/aarch64-linux-gnu/
ENV PKG_CONFIG_LIBDIR=/usr/lib/aarch64-linux-gnu/pkgconfig
#ENV PKG_CONFIG_PATH=/usr/lib/aarch64-linux-gnu/pkgconfig
ENV RUSTFLAGS='-L /lib/aarch64-linux-gnu -L /usr/aarch64-linux-gnu/lib'